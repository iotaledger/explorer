{
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~app/*": [
        "src/app/*"
      ],
      "~assets/*": [
        "src/assets/*"
      ],
      "~factories/*": [
        "src/factories/*"
      ],
      "~helpers/*": [
        "src/helpers/*"
      ],
      "~models/*": [
        "src/models/*"
      ],
      "~scss/*": [
        "src/scss/*"
      ],
      "~services/*": [
        "src/services/*"
      ],
      "~features/*": [
        "src/features/*"
      ],
      "~hooks/*": [
        "src/helpers/hooks/*"
      ]
    }
  },
  "include": [
    "src",
    "typings",
    "vite-env.d.ts"
  ]
}