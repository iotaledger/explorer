{
    "name": "explorer-api",
    "description": "API for Tangle Explorer",
    "version": "1.0.0",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/explorer.git/tree/main/api"
    },
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "eslint src --ext .tsx,.ts",
        "build-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-lint build-config",
        "serve-mon": "nodemon ./dist/index",
        "start-dev": "run-p serve-mon build-watch",
        "start": "node ./dist/index"
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "@iota/core": "^1.0.0-beta.30",
        "@iota/crypto.js": "^1.8.6",
        "@iota/identity-wasm": "^0.4.2",
        "@iota/iota.js": "^1.8.6",
        "@iota/mqtt.js": "^1.8.6",
        "@iota/transaction-converter": "^1.0.0-beta.30",
        "@iota/util.js": "^1.8.6",
        "@iota/validators": "^1.0.0-beta.30",
        "abort-controller": "^3.0.0",
        "aws-sdk": "^2.1005.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "mqtt": "^4.2.8",
        "node-fetch": "^3.1.1",
        "socket.io": "^4.2.0",
        "uuid": "^8.3.2",
        "zeromq": "^5.2.8"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^16.10.3",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsdoc": "^36.1.1",
        "eslint-plugin-unicorn": "^36.0.0",
        "nodemon": "^2.0.13",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.3"
    }
}
